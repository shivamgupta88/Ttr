{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/content/(.*)",
      "dest": "https://static.texttoreels.in/$1",
      "status": 301
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "BACKEND_URL": "https://api.texttoreels.in"
  },
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30
    }
  }
}